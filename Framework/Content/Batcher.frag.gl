#version 300 es
precision mediump float;
precision highp int;

uniform highp sampler2D Sampler;

layout(location = 0) in highp vec2 TexCoord;
layout(location = 1) in highp vec4 Color;
layout(location = 2) in highp vec4 Type;

layout(location = 0) out highp vec4 FragColor;

void main()
{
    highp vec4 color = texture(Sampler, TexCoord);
    FragColor = (((color * Type.x) * Color) + (Color * (Type.y * color.w))) + (Color * Type.z);
}